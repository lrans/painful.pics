<div id="lobby-modal" class="uk-modal">
    <div class="uk-modal-dialog">
        <div class="uk-modal-content">
			<table class="uk-table uk-text-large uk-text-bold players-list">
			<colgroup>
				<col width="1">
			</colgroup>
				<tbody>
					{{#each players}}
						<tr>
							<td>
								<span>{{this.handle}}</span>
							</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
            <div id="qrcode"></div>
        </div>
        <div class="uk-modal-footer uk-text-right">
            <button class="uk-button uk-button-primary uk-button-large start-game">Begin quizz !</button>
        </div>
    </div>
</div>