<div class="uk-form-row">
	<label class="uk-form-label" for="choices-query">With which query ?</label>
	<div class="uk-form-controls">
		<select data-key="mode" id="choices-mode" name="choices-mode">
			{{#each choices_mode}}
				<option value="{{ this.value }}">{{ this.label }}</option>
			{{/each}}
		</select>
		<input data-key="query" name="query" value="{{ choices_query.[0].value }}">
	</div>
</div>
<div class="uk-form-row">
	<label class="uk-form-label" for="sorting">Sorted</label>
	<div class="uk-form-controls">
		<select data-key="sorting" id="sorting" name="sorting">
			{{#each choices_sorting}}
				<option value="{{ this.value }}" {{#test this.value "==" ../sorting}}selected{{/test}}>{{ this.label }}</option>
			{{/each}}
		</select>
	</div>
</div>
<div class="uk-form-row">
	<label class="uk-form-label" for="filtercomments">Filter comments ?</label>
	<div class="uk-form-controls">
		<input data-key="Bfiltercomments" name="filtercomments" type="checkbox">
		<input data-key="commentsby" name="commentsby">
	</div>
</div>