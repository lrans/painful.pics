<div class="uk-modal quizz-modal {{ mode }}">
    <div class="uk-modal-dialog">
        <div class="uk-modal-header">
            <h2 class="uk-display-inline-block">Game settings</h2>
			<div class="uk-display-inline-block uk-button-group mode" data-uk-switcher="{connect:'#multi-panel-switcher'}">
				<button class="uk-button {{#test mode "==" 'single'}}uk-active{{/test}}" name="single" type="button">Forever alone</button>
				<button class="uk-button {{#test mode "==" 'multi'}}uk-active{{/test}}" name="multi" type="button">Party mode</button>
			</div>
        </div>
        <div class="uk-modal-content">
            <div class="uk-flex">
                <form class="uk-form uk-form-horizontal quizz-settings">
					<input type="hidden" name="mode" value="{{ mode }}">
                    <div class="uk-form-row">
                        <label class="uk-form-label" for="nbItems">How many questions ?</label>
                        <div class="uk-form-controls">
                            <select id="nbItems" name="nbItems">
                                {{#each choices_nbItems}}
                                    <option value="{{ this.value }}" {{#test this.value "==" ../nbItems}}selected{{/test}}>{{ this.label }}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="uk-form-row">
                        <label class="uk-form-label" for="nbAnswers">How many choices per question ?</label>
                        <div class="uk-form-controls">
                            <select id="nbAnswers" name="nbAnswers">
                                {{#each choices_nbAnswers}}
                                    <option value="{{ this.value }}" {{#test this.value "==" ../nbAnswers}}selected{{/test}}>{{ this.label }}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="uk-form-row">
                        <label class="uk-form-label" for="timer">How long to answer ?</label>
                        <div class="uk-form-controls">
                            <select id="timer" name="timer">
                                {{#each choices_timer}}
                                    <option value="{{ this.value }}" {{#test this.value "==" ../timer}}selected{{/test}}>{{ this.label }}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
					<div class="uk-form-row">
                        <label class="uk-form-label" for="tags">What will you have to guess ?</label>
                        <div class="uk-form-controls">
                            <select id="tags" name="tags">
                                {{#each choices_tags}}
                                    <option value="{{ this.value }}" {{#test this.value "==" ../tags}}selected{{/test}}>{{ this.label }}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
					<div class="uk-tab-center">
						<ul class="uk-tab datasource-chooser" data-uk-tab>
							{{#each choices_imageSource}}
								<li class="{{#test this.value "==" ../imageSource}}uk-active{{/test}} {{#test this.availability.status "==" 'error'}}uk-disabled{{/test}}" name="{{ this.value }}">
									<a data-uk-tooltip title="{{ this.availability.message }}"><i class="{{ this.availability.icon }}"></i>{{ this.label }}</a>
								</li>
							{{/each}}
						</ul>
					</div>
					<div id="datasource-settings-placeholder"></div>
                </form>
            </div>
			<div class="uk-switcher" id="multi-panel-switcher">
				<div></div>
				<div class="uk-panel">
					<h1>Scan to join</h1>
					<div id="qrcode"></div>
					<h1>Players</h1>
					<div class="players"></div>
				</div>
			</div>
        </div>
        <div class="uk-modal-footer uk-text-right">
            <button class="uk-button uk-button-primary start-game">Begin quizz !</button>
        </div>
    </div>
</div>
